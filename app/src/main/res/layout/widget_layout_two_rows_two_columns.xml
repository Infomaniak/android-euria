<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widgetPadding">

    <include
        layout="@layout/widget_action_button_new_conversation_with_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/widgetPaddingBetweenActions"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            layout="@layout/widget_action_button_microphone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/widgetPaddingBetweenActions"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <include
            layout="@layout/widget_action_button_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
